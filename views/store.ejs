    <a href="/logout">LOGOUT</a>
    <% if(rank != 'user') { %>
    <a href="/home">BACK TO CONTROL PANEL</a>
    <% } %>
    <% if(data.length > 0) {%>
    <h3>Your purchases</h3>
    <table class="table">
      <tr>
        <th>product</th>
        <th>orderNumber</th>
        <th>orderDate</th>
        <th>keytext</th>

      </tr>
      <% for({orderNumber, orderDate, keytext, product} of data) {%>
      <tr>
        <td><%= product %></td>
        <td title="<%= orderNumber %>"><%= orderNumber.substring(0,10)+'...' %></td>
        <td><%= orderDate.toString().substring(3,15) %></td>
        <td><%= keytext %></td>
      </tr>
      <% }} %>
    </table>
