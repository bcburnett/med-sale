<%- include header.ejs %>
<h2>Welcome back <%= name %></h2>
<% if(message.length > 0) { %>
  <div class="alert alert-danger"><%= message %></div>
 <% } %>

    <form action="/pay" method="post">
      <select name="product" id="product" >
          <option value="med-tech software key">med-tech software key</option>
          <option value="med-line software key">med-line software key</option>
      </select>
    <h2>Buy For $25.00</h2>
